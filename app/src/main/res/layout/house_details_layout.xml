<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/house_details_container_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/edit_text_border"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/house_details_outer_linear_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/house_details_inner_linear_layout_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/house_type_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/curved_background"
                android:backgroundTint="@color/colorPrimary"
                android:padding="1dp"
                android:text="Rented"
                android:textAlignment="center"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/house_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="The latitude Condo"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="131dp" />

            <TextView
                android:id="@+id/house_address_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:text="Block 62, civil lines"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="236dp" />

        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteY="421dp" />

        <LinearLayout
            android:id="@+id/house_details_inner_linear_layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/house_type_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/home"
                tools:layout_editor_absoluteY="477dp" />

            <TextView
                android:id="@+id/house_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rental Date \n 5th monthly"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="498dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/house_details_image_view"
        android:layout_width="0dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@mipmap/home" />
</LinearLayout>